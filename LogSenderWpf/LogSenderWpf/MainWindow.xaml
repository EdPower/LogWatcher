<Window x:Class="LogSenderWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogSenderWpf"
        mc:Ignorable="d"
        Title="MainWindow" Width="400" Height="300" >
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Height="150" Width="300" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" >
                <Label Content="Status:" HorizontalAlignment="Left" />
                <ListBox Name="listBoxStatus" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button Name="buttonStart" Content="Start" Width="50" Height="25" Margin="10" Click="buttonStart_Click" />
                <Button Name="buttonStop" Content="Stop" Width="50" Height="25" Margin="10" Click="buttonStop_Click" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
